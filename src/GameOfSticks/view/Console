	public void textSticks(Game g) {
		System.out.println("There is " + g.getSticksLeft() + " sticks left.");
		
	}

	public void printSticks(Game g) {
		for(int i = 0; i < g.getSticksLeft(); i++){
			System.out.print("|");
		}
		
	}

	public void selectNumberOfSticks(Game g) {
		System.out.println("Select number of sticks");
		
	}
	
}

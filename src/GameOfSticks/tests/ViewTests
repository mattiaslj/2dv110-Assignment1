package GameOfSticks.tests;

import static org.junit.Assert.*;
import static org.mockito.Mockito.*;
import java.io.PrintWriter;
import GameOfSticks.view.Console;
import org.junit.Test;
import GameOfSticks.model.Game;

public class ViewTests {

	private PrintWriter console;
	private Console sut;
	private Game g;

	@Test
	public void shouldShowWelcomeMessage() {
		console = mock(PrintWriter.class);
		sut = new Console(console);			
		sut.showWelcomeMessage();
		verify(console).println(Console.WELCOME);

	}
	
	
	@Test
	public void shouldPrintSticksLeft(){
		c = new Console();
		g = new Game();
		
		System.setOut(new PrintStream(outContent));
		c.printSticks();
		assertEquals("There is " + g.getSticksLeft() + " left.", outContent.toString());
	}
	
	
	public void printSticks(Game g) {
		for(int i = 0; i < g.getSticksLeft(); i++){
			System.out.print("|");
		}
		
	}
	
	
	public void selectNumberOfSticks(Game g) {
		System.out.println("Select number of sticks");
		
	}
	
	

}
